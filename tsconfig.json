{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es2017", "dom"],
        "outDir": "./build",
        "module": "commonjs",
        "baseUrl": ".",

        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,

        "paths": {
            "*": [
                "../../node_modules/@types/*",
                "./@types/*"
            ]
        },
        "types": [
            "node",
            "chai",
            "mocha",
            "supertest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "configs/**/*",
        "@types/**/*",
        "tests/**/*"
    ],
    "files": [
        "./@types/express.d.ts"
    ]
}
