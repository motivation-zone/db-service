{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "outDir": "./build",
        "module": "commonjs",

        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strictNullChecks": true,

        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/@types/*",
                "./@types/*"
            ]
        },

        "types": [
            "node",
            "chai",
            "mocha",
            "supertest",
            "express"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "configs/**/*",
        "@types/**/*",
        "tests/**/*"
    ]
}